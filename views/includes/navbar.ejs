<style>
  .search-btn {
    background-color: #fe424d;
    color: white;
    border: none;
    border-radius: 25px;
    padding: 0 1rem 0 1rem 0;
  }
  .search-btn:hover {
    background-color: #fe424d;
    color: white;
    border: none;
  }
  .search-btn i {
    display: inline;
    margin-right: 0.5rem;
  }
  .search-inp {
    border-radius: 25px;
    padding: 0.5rem 3rem 0.5rem 3rem;
    font-size: 1rem;
    height: 3rem;
  }
  .web-title {
    font-family: "Poetsen One", sans-serif;
    font-weight: 400;
    font-style: normal;
    font-size: 25px;
    color: #fe424d !important;
  }
  .nav-button {
    padding:0px 3px 0px 3px;
    border-radius: 10px;
    background-color: black;
    z-index: 0;
  }
  .nav-button:hover{
    display: block !important;
    background-color: #fe424d !important;
  }
  .nav-anchor {
    color: white !important;
  }
</style>

<nav class="navbar navbar-expand-md bg-body-light sticky-top mb-1">
  <div class="container-fluid">
    <a class="navbar-brand" href="/listings"
      ><i class="fa-regular fa-compass ms-3"></i
    ></a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link web-title" href="/listings">WanderLust</a>
      </div>
      <div class="navbar-nav ms-auto">
        <form
          class="d-flex"
          role="search"
          action="/listings/search"
          method="post"
        >
          <input
            class="form-control me-2 search-inp"
            type="search"
            placeholder="Search Destinations"
            aria-label="Search"
            name="location"
          />
          <button class="btn btn-outline-danger search-btn" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i>Search
          </button>
        </form>
      </div>
      <div class="navbar-nav ms-auto nav-options">
        <button class="btn nav-button" type="submit">
          <a class="nav-link nav-anchor" href="/listings/new/newListing">Host Your Stay</a>
        </button>
        <%if(!currUser){%>
        <button class="btn nav-button" type="submit">
          <a class="nav-link nav-anchor" aria-current="page" href="/login">login</a>
        </button>
        <button class="btn nav-button" type="submit">
          <a class="nav-link nav-anchor" href="/signup">Sign Up</a>
        </button>

        <% } %> <% if(currUser){ %>
          <button class="btn nav-button" type="submit">
            <a class="nav-link nav-anchor" href="/logout">Logout</a>
          </button>
        <a href="/listings/user/profile" class="ms-3 me-3">
          <i class="fa-solid fa-user fs-2"></i>
        </a>
        <%} %>
      </div>
    </div>
  </div>
</nav>
